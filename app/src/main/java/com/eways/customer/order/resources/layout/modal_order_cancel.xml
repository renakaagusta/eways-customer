<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/rc_bgwhite"
    android:elevation="@dimen/regularElevation">
    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/ic_question"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="25dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/horizontalBoundary"
        android:layout_marginTop="10dp"
        android:text="Apakah anda yakin ingin membatalkan pesanan?"
        android:textSize="@dimen/regularText"
        android:textColor="@color/colorRegularText"
        android:fontFamily="@font/raleway_semibold"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2"
        android:paddingVertical="@dimen/horizontalBoundary"
        android:paddingHorizontal="@dimen/horizontalBoundary"
        android:clipToPadding="false"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tvCancel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginEnd="5dp"
            android:padding="10dp"
            android:text="Tidak"
            android:textColor="@color/colorPrimary"
            android:gravity="center_horizontal"
            android:textSize="@dimen/regularText"
            android:fontFamily="@font/raleway_medium"
            android:background="@drawable/rc_bgwhite_bprimary"
            android:elevation="@dimen/regularElevation"/>

        <TextView
            android:id="@+id/tvConfirm"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="5dp"
            android:padding="10dp"
            android:text="Ya, batalkan"
            android:textColor="@color/white"
            android:gravity="center_horizontal"
            android:textSize="@dimen/regularText"
            android:fontFamily="@font/raleway_medium"
            android:background="@drawable/rc_bgprimary"
            android:elevation="@dimen/regularElevation"/>
    </LinearLayout>
</LinearLayout>