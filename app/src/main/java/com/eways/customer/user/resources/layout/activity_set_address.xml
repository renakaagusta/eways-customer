<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorRegularText"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/llAddress">
        <fragment
            android:id="@+id/map"
            android:name="com.google.android.gms.maps.SupportMapFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/horizontalBoundary"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/ibActionbarClose"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:background="@drawable/circle_bgwhite"
                android:src="@drawable/ic_arrow_back_black_24dp"
                android:padding="5dp"
                android:tint="@color/colorRegularText"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:padding="12dp"
                android:background="@drawable/rc_bgwhite"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/decoration_tv_green"
                    android:layout_gravity="center_vertical"
                    android:layout_marginEnd="10dp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Masukkan alamat anda dengan memilih lokasi di peta"
                    android:fontFamily="@font/raleway_medium"
                    android:textSize="@dimen/smallText"
                    android:textColor="@color/darkText"/>
            </LinearLayout>
        </LinearLayout>
    </FrameLayout>
    <LinearLayout
        android:id="@+id/llAddress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/rctop_bgwhite"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tilAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_marginHorizontal="@dimen/horizontalBoundary">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/tietAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/alamat"
                android:textColorHighlight="@color/colorRegularText"
                android:fontFamily="@font/raleway_medium"
                android:textColor="@color/colorRegularText"
                android:drawableEnd="@drawable/ic_address"/>
        </com.google.android.material.textfield.TextInputLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/horizontalBoundary"
            android:paddingTop="10dp"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:padding="15dp"
                android:background="@drawable/circle_bgprimary"
                android:src="@drawable/ic_pinpoint"
                android:layout_gravity="center_vertical"/>
            <TextView
                android:id="@+id/tvAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_gravity="center_vertical"
                android:text="Jalan yang disesuaikan dengan pinpoint"
                android:fontFamily="@font/raleway_medium"
                android:textColor="@color/colorRegularText"
                android:textSize="@dimen/regularText"/>
        </LinearLayout>
        <TextView
            android:id="@+id/tvRegister"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:paddingVertical="15dp"
            android:background="@color/colorPrimary"
            android:text="@string/daftar"
            android:textSize="@dimen/regularText"
            android:fontFamily="@font/raleway_medium"
            android:gravity="center"
            android:textColor="@color/white"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>