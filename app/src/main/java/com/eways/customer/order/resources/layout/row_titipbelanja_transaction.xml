<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:weightSum="10"
    android:orientation="horizontal"
    android:padding="10dp">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="7"
        android:orientation="horizontal"
        android:layout_alignParentStart="true">
        <ImageView
            android:id="@+id/ivSubproduct"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_product"
            android:layout_gravity="center_vertical"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="8dp">
            <TextView
                android:id="@+id/tvSubproductName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/raleway_medium"
                android:textColor="@color/colorRegularText"
                android:textSize="@dimen/semiBigText"
                android:text="Nama Barang"/>
            <TextView
                android:id="@+id/tvSubproductPrice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/raleway_medium"
                android:textColor="@color/colorRegularText"
                android:textSize="@dimen/smallText"
                android:text="Harga Satuan"/>
            <TextView
                android:id="@+id/tvSubproductAmount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/raleway_medium"
                android:textColor="@color/colorRegularText"
                android:textSize="@dimen/smallText"
                android:text="4 item"/>
        </LinearLayout>

    </LinearLayout>
        <TextView
            android:id="@+id/tvTotal"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:paddingHorizontal="10dp"
            android:paddingVertical="5dp"
            android:text="Rp 10000"
            android:textSize="@dimen/regularText"
            android:textColor="@color/colorRegularText"
            android:fontFamily="@font/raleway_medium"
            android:layout_gravity="center_horizontal"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"/>
</LinearLayout>