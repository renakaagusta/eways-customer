<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingHorizontal="@dimen/horizontalBoundary"
            android:orientation="vertical"
            android:clipToPadding="false">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:paddingVertical="10dp"
                android:orientation="vertical"
                android:background="@drawable/rc_bgwhite"
                android:elevation="5dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="10"
                    android:orientation="horizontal"
                    android:background="@drawable/rc_bgwhite"
                    android:padding="10dp">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="7"
                        android:text="Barang"
                        android:fontFamily="@font/raleway_semibold"
                        android:textSize="@dimen/regularText"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:text="Subtotal"
                        android:fontFamily="@font/raleway_semibold"
                        android:textSize="@dimen/regularText"
                        android:layout_gravity="center_horizontal"/>
            </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginVertical="5dp"
                    android:background="@color/lightGrey"/>
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvTransaction"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="10dp"/>\
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="3dp"
                    android:layout_marginVertical="6dp"
                    android:layout_marginHorizontal="10dp"
                    android:src="@drawable/line_dashed"
                    android:layerType="software"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="10"
                    android:layout_marginHorizontal="10dp"
                    android:orientation="horizontal"
                    android:paddingVertical="5dp">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="7"
                        android:text="Total Belanja"
                        android:fontFamily="@font/raleway_medium"
                        android:textColor="@color/colorRegularText"
                        android:textSize="@dimen/regularText"/>
                    <TextView
                        android:id="@+id/tvTotalBelanja"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:fontFamily="@font/raleway_medium"
                        android:textColor="@color/colorRegularText"
                        android:textSize="@dimen/regularText"
                        android:layout_gravity="center_horizontal"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="10"
                    android:layout_marginHorizontal="10dp"
                    android:orientation="horizontal"
                    android:paddingVertical="5dp">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="7"
                        android:text="Fee Agen"
                        android:fontFamily="@font/raleway_medium"
                        android:textColor="@color/colorRegularText"
                        android:textSize="@dimen/regularText"/>
                    <TextView
                        android:id="@+id/tvAgentFee"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:fontFamily="@font/raleway_medium"
                        android:textSize="@dimen/regularText"
                        android:textColor="@color/colorRegularText"
                        android:layout_gravity="center_horizontal"/>
                </LinearLayout>
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="3dp"
                    android:layout_marginVertical="6dp"
                    android:layout_marginHorizontal="10dp"
                    android:src="@drawable/line_dashed"
                    android:layerType="software"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="10"
                    android:layout_marginHorizontal="10dp"
                    android:orientation="horizontal"
                    android:paddingVertical="5dp">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="7"
                        android:text="Total Tagihan"
                        android:fontFamily="@font/raleway_semibold"
                        android:textColor="@color/colorRegularText"
                        android:textSize="@dimen/regularText"/>
                    <TextView
                        android:id="@+id/tvTotalTransaction"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:fontFamily="@font/raleway_medium"
                        android:textSize="@dimen/regularText"
                        android:textColor="@color/colorPrimary"
                        android:layout_gravity="center_horizontal"/>
                </LinearLayout>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:paddingVertical="10dp"
                android:paddingHorizontal="10dp"
                android:orientation="vertical"
                android:background="@drawable/rc_bgwhite"
                android:elevation="5dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="5dp"
                    android:textSize="@dimen/regularText"
                    android:text="@string/agen"
                    android:textColor="@color/colorRegularText"
                    android:fontFamily="@font/raleway_semibold"/>
                <RelativeLayout
                    android:id="@+id/rlAgentOption"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="10dp"
                    android:layout_marginHorizontal="5dp"
                    android:background="@drawable/bg_ordertext"
                    android:padding="10dp">
                    <TextView
                        android:id="@+id/tvAgentOption"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorHint"
                        android:text="@string/agent_hint"
                        android:textSize="@dimen/regularText"
                        android:fontFamily="@font/raleway_medium"
                        android:layout_centerVertical="true"
                        android:layout_alignParentStart="true"
                        android:layout_toStartOf="@+id/ivAgentOption"/>
                    <ImageView
                        android:id="@+id/ivAgentOption"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:src="@drawable/ic_expand_more_black_24dp"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"/>
                </RelativeLayout>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentBottom="true"
                android:orientation="vertical"
                android:gravity="bottom">
                <TextView
                    android:id="@+id/tvSubmit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rc_bgprimary"
                    android:layout_marginVertical="16dp"
                    android:elevation="5dp"
                    android:fontFamily="@font/raleway_medium"
                    android:padding="12dp"
                    android:text="Konfirmasi"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="@dimen/regularText" />
            </LinearLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>