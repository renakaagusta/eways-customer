<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:focusable="true"
            android:clipToPadding="false">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/topBoundary"
                android:layout_marginHorizontal="@dimen/horizontalBoundary"
                android:padding="10dp"
                android:background="@drawable/rc_bgwhite"
                android:elevation="@dimen/regularElevation"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/regularText"
                    android:text="Titip Belanja"
                    android:textColor="@color/colorRegularText"
                    android:fontFamily="@font/raleway_semibold"/>
                <TextView
                    android:id="@+id/tvProductName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:textColor="@color/colorRegularText"
                    android:text="Pesan produk bahan makanan"
                    android:fontFamily="@font/raleway_medium"
                    android:textSize="@dimen/regularText"/>

                <TextView
                    android:id="@+id/tvDate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:textColor="@color/colorRegularText"
                    android:text="21 Juli 2019"
                    android:fontFamily="@font/raleway_medium"
                    android:textSize="@dimen/regularText"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/topBoundary"
                android:layout_marginHorizontal="@dimen/horizontalBoundary"
                android:padding="10dp"
                android:background="@drawable/rc_bgwhite"
                android:elevation="@dimen/regularElevation"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="10"
                    android:orientation="horizontal"
                    android:background="@drawable/rc_bgwhite">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="7"
                        android:text="Barang"
                        android:fontFamily="@font/raleway_semibold"
                        android:textSize="@dimen/regularText"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:text="Subtotal"
                        android:fontFamily="@font/raleway_semibold"
                        android:textSize="@dimen/regularText"
                        android:layout_gravity="center_horizontal"/>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginVertical="5dp"
                    android:background="@color/lightGrey"/>
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvTransaction"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="10dp"/>
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="3dp"
                    android:layout_marginVertical="12dp"
                    android:src="@drawable/line_dashed"
                    android:layerType="software"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="10"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="7"
                        android:text="Total Belanja"
                        android:fontFamily="@font/raleway_medium"
                        android:textColor="@color/colorRegularText"
                        android:textSize="@dimen/regularText"/>
                    <TextView
                        android:id="@+id/tvTotalBelanja"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:fontFamily="@font/raleway_medium"
                        android:textColor="@color/colorRegularText"
                        android:textSize="@dimen/regularText"
                        android:layout_gravity="center_horizontal"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="10"
                    android:orientation="horizontal"
                    android:paddingTop="5dp">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="7"
                        android:text="Fee Agen"
                        android:fontFamily="@font/raleway_medium"
                        android:textColor="@color/colorRegularText"
                        android:textSize="@dimen/regularText"/>
                    <TextView
                        android:id="@+id/tvAgentFee"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:fontFamily="@font/raleway_medium"
                        android:textSize="@dimen/regularText"
                        android:textColor="@color/colorRegularText"
                        android:layout_gravity="center_horizontal"/>
                </LinearLayout>
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="3dp"
                    android:layout_marginVertical="12dp"
                    android:src="@drawable/line_dashed"
                    android:layerType="software"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="10"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="7"
                        android:text="Total Tagihan"
                        android:fontFamily="@font/raleway_semibold"
                        android:textColor="@color/colorRegularText"
                        android:textSize="@dimen/regularText"/>
                    <TextView
                        android:id="@+id/tvTotalTransaction"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:fontFamily="@font/raleway_medium"
                        android:textSize="@dimen/regularText"
                        android:textColor="@color/colorPrimary"
                        android:layout_gravity="center_horizontal"/>
                </LinearLayout>

            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/horizontalBoundary"
                android:layout_marginTop="@dimen/topBoundary"
                android:paddingStart="10dp"
                android:textSize="@dimen/regularText"
                android:text="@string/status"
                android:textColor="@color/colorRegularText"
                android:fontFamily="@font/raleway_semibold"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/horizontalBoundary"
                android:padding="10dp"
                android:orientation="vertical"
                android:background="@drawable/rc_bgwhite"
                android:layout_gravity="center_horizontal"
                android:elevation="@dimen/regularElevation">
                <ImageView
                    android:layout_width="130dp"
                    android:layout_height="140dp"
                    android:src="@drawable/ic_order_done"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:gravity="center_horizontal"
                    android:textSize="@dimen/regularText"
                    android:textColor="@color/darkText"
                    android:fontFamily="@font/raleway_semibold"
                    android:text="Selesai"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/topBoundary"
                android:layout_marginHorizontal="@dimen/horizontalBoundary"
                android:layout_marginBottom="10dp"
                android:orientation="vertical"
                android:background="@drawable/rc_bgwhite"
                android:elevation="@dimen/regularElevation">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginHorizontal="10dp"
                    android:text="@string/review"
                    android:textColor="@color/darkText"
                    android:fontFamily="@font/raleway_semibold"
                    android:textSize="@dimen/regularText"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="10dp"
                    android:background="@color/cardview_shadow_start_color"/>
                <EditText
                    android:id="@+id/etReview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginHorizontal="10dp"
                    android:lines="5"
                    android:gravity="top|left"
                    android:hint="@string/review_hint"
                    android:textColor="@color/darkText"
                    android:background="@drawable/bg_ordertext"
                    android:padding="10dp"
                    android:textSize="@dimen/regularText"
                    android:fontFamily="@font/raleway_medium"/>
                <TextView
                    android:id="@+id/tvReviewSend"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="10dp"
                    android:layout_marginHorizontal="10dp"
                    android:paddingVertical="10dp"
                    android:paddingHorizontal="50dp"
                    android:text="@string/kirim"
                    android:textColor="@color/white"
                    android:textSize="@dimen/regularText"
                    android:fontFamily="@font/raleway_semibold"
                    android:background="@drawable/rc_bgprimary"
                    android:layout_gravity="center"/>
                <TextView
                    android:id="@+id/tvReview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="10dp"
                    android:layout_marginVertical="10dp"

                    android:textColor="@color/colorRegularText"
                    android:fontFamily="@font/raleway_medium"
                    android:textSize="@dimen/regularText"/>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>