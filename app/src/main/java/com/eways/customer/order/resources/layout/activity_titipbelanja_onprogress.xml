<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:focusable="true"
            android:clipToPadding="false">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/topBoundary"
                android:layout_marginHorizontal="@dimen/horizontalBoundary"
                android:padding="10dp"
                android:background="@drawable/rc_bgwhite"
                android:elevation="@dimen/regularElevation"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/regularText"
                    android:text="Titip Belanja"
                    android:textColor="@color/colorRegularText"
                    android:fontFamily="@font/raleway_semibold"/>
                <TextView
                    android:id="@+id/tvProductName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/regularText"
                    android:text="Pesan Produk Bahan Makanan"
                    android:textColor="@color/colorRegularText"
                    android:fontFamily="@font/raleway_medium"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginVertical="5dp"
                    android:background="@color/lightGrey"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="10"
                    android:orientation="horizontal"
                    android:background="@drawable/rc_bgwhite">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="7"
                        android:text="Barang"
                        android:fontFamily="@font/raleway_semibold"
                        android:textSize="@dimen/regularText"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:text="Subtotal"
                        android:fontFamily="@font/raleway_semibold"
                        android:textSize="@dimen/regularText"
                        android:layout_gravity="center_horizontal"/>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="10dp"
                    android:background="@color/lightGrey"/>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvTransaction"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />\
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="3dp"
                    android:layout_marginVertical="12dp"
                    android:src="@drawable/line_dashed"
                    android:layerType="software"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="10"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="7"
                        android:text="Total Belanja"
                        android:fontFamily="@font/raleway_medium"
                        android:textColor="@color/colorRegularText"
                        android:textSize="@dimen/regularText"/>
                    <TextView
                        android:id="@+id/tvTotalBelanja"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:fontFamily="@font/raleway_medium"
                        android:textColor="@color/colorRegularText"
                        android:textSize="@dimen/regularText"
                        android:layout_gravity="center_horizontal"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="10"
                    android:orientation="horizontal"
                    android:paddingTop="5dp">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="7"
                        android:text="Fee Agen"
                        android:fontFamily="@font/raleway_medium"
                        android:textColor="@color/colorRegularText"
                        android:textSize="@dimen/regularText"/>
                    <TextView
                        android:id="@+id/tvAgentFee"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:fontFamily="@font/raleway_medium"
                        android:textSize="@dimen/regularText"
                        android:textColor="@color/colorRegularText"
                        android:layout_gravity="center_horizontal"/>
                </LinearLayout>
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="3dp"
                    android:layout_marginVertical="12dp"
                    android:src="@drawable/line_dashed"
                    android:layerType="software"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="10"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="7"
                        android:text="Total Tagihan"
                        android:fontFamily="@font/raleway_semibold"
                        android:textColor="@color/colorRegularText"
                        android:textSize="@dimen/regularText"/>
                    <TextView
                        android:id="@+id/tvTotalTransaction"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:fontFamily="@font/raleway_medium"
                        android:textSize="@dimen/regularText"
                        android:textColor="@color/colorPrimary"
                        android:layout_gravity="center_horizontal"/>
                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/topBoundary"
                android:layout_marginHorizontal="@dimen/horizontalBoundary"
                android:padding="10dp"
                android:background="@drawable/rc_bgwhite"
                android:elevation="@dimen/regularElevation"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/regularText"
                    android:text="@string/agen"
                    android:textColor="@color/colorRegularText"
                    android:fontFamily="@font/raleway_semibold"/>
                <TextView
                    android:id="@+id/tvAgentName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="5dp"
                    android:textColor="@color/colorRegularText"
                    android:fontFamily="@font/raleway_medium"
                    android:textSize="@dimen/regularText"/>
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/topBoundary"
                android:layout_marginHorizontal="@dimen/horizontalBoundary"
                android:layout_marginStart="10dp"
                android:textSize="@dimen/regularText"
                android:text="@string/status"
                android:textColor="@color/colorRegularText"
                android:fontFamily="@font/raleway_semibold"/>
            <LinearLayout
                android:id="@+id/statusOnRequest"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="@dimen/horizontalBoundary"
                android:paddingBottom="12dp"
                android:orientation="vertical"
                android:clipToPadding="false">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="15dp"
                    android:text="Belum Dilayani"
                    android:textColor="@color/colorPrimary"
                    android:fontFamily="@font/raleway_semibold"
                    android:textSize="@dimen/regularText"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginVertical="15dp"
                    android:background="@color/lightGrey"/>
                <LinearLayout
                    android:id="@+id/llChatNotReady"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:background="@drawable/rc_bglightgray"
                    android:elevation="@dimen/regularElevation">
                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginEnd="8dp"
                        android:src="@drawable/ic_chat_black_24dp"
                        android:tint="@color/white"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/chat_agen"
                        android:textColor="@color/white"
                        android:fontFamily="@font/raleway_medium"
                        android:textSize="@dimen/regularText"/>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginVertical="15dp"
                    android:background="@color/lightGrey"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:text="@string/order_cancel_hint"
                    android:textColor="@color/colorRegularText"
                    android:fontFamily="@font/raleway_medium"
                    android:textSize="@dimen/regularText"/>
                <LinearLayout
                    android:id="@+id/llCancelOrder"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:padding="10dp"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:background="@drawable/rc_bgwhite_bprimary"
                    android:elevation="@dimen/regularElevation">
                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginEnd="8dp"
                        android:src="@drawable/ic_close_black_24dp"
                        android:tint="@color/colorPrimary"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/order_cancel"
                        android:textColor="@color/colorPrimary"
                        android:fontFamily="@font/raleway_medium"
                        android:textSize="@dimen/regularText"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/otherStatus"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingTop="10dp"
                android:orientation="vertical"
                android:clipToPadding="false">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="15dp"
                    android:orientation="vertical"
                    android:background="@drawable/rc_bgwhite"
                    android:elevation="@dimen/regularElevation"
                    android:layout_gravity="center">
                    <ImageView
                        android:layout_width="130dp"
                        android:layout_height="140dp"
                        android:src="@drawable/ic_order_onprogress"
                        android:layout_gravity="center_horizontal" />
                    <TextView
                        android:id="@+id/txtStatus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="On Progress"
                        android:textColor="@color/colorRegularText"
                        android:fontFamily="@font/raleway_semibold"
                        android:textSize="@dimen/regularText"
                        android:layout_gravity="center_horizontal"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="15dp"
                    android:paddingHorizontal="@dimen/horizontalBoundary"
                    android:weightSum="2"
                    android:orientation="horizontal"
                    android:paddingBottom="12dp"
                    android:clipToPadding="false"
                    android:gravity="bottom">
                    <LinearLayout
                        android:id="@+id/llDone"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginEnd="5dp"
                        android:orientation="horizontal"
                        android:padding="10dp"
                        android:background="@drawable/rc_bglightgray"
                        android:elevation="@dimen/regularElevation"
                        android:gravity="center">
                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_marginEnd="8dp"
                            android:src="@drawable/ic_check_double"
                            android:tint="@color/white"
                            android:layout_gravity="center_vertical"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/selesai"
                            android:textColor="@color/white"
                            android:fontFamily="@font/raleway_medium"
                            android:textSize="@dimen/regularText"
                            android:layout_gravity="center_vertical"/>

                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/llChat"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="5dp"
                        android:orientation="horizontal"
                        android:padding="10dp"
                        android:background="@drawable/rc_bgprimary"
                        android:elevation="@dimen/regularElevation"
                        android:gravity="center">
                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_marginEnd="8dp"
                            android:src="@drawable/ic_chat_black_24dp"
                            android:tint="@color/white"
                            android:layout_gravity="center_vertical"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/chat_agen"
                            android:textColor="@color/white"
                            android:fontFamily="@font/raleway_medium"
                            android:textSize="@dimen/regularText"
                            android:layout_gravity="center_vertical"/>

                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>