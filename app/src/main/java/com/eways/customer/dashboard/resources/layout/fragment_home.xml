<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/white">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:clipToPadding="false"
            android:focusableInTouchMode="true">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/horizontalBoundary"
                android:layout_marginTop="15dp">
                <LinearLayout
                    android:id="@+id/llUser"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="30dp"
                    android:orientation="horizontal"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentStart="true">
                    <ImageView
                        android:id="@+id/imgProfile"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:src="@drawable/ic_user"
                        android:layout_gravity="center"/>
                    <TextView
                        android:id="@+id/tvName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:text="Nama User"
                        android:fontFamily="@font/raleway_medium"
                        android:textSize="@dimen/regularText"
                        android:textColor="@color/darkText"
                        android:layout_gravity="center_vertical"/>
                </LinearLayout>
                <RelativeLayout
                    android:layout_width="22dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true">
                    <ImageView
                        android:id="@+id/ivNotification"
                        android:layout_width="22dp"
                        android:layout_height="22dp"
                        android:src="@drawable/ic_notification"/>
                    <ImageView
                        android:id="@+id/ivNotificationAlert"
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:background="@drawable/circle_bgprimary"
                        android:layout_alignParentEnd="true"
                        android:visibility="gone"/>
                </RelativeLayout>
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginHorizontal="@dimen/horizontalBoundary"
                android:background="@drawable/rc_bgwhite"
                android:elevation="5dp"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:orientation="horizontal"
                    android:background="@drawable/rctop_bgprimary">
                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/ic_mainservice"
                        android:layout_gravity="center_vertical"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginStart="10dp">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/white"
                            android:text="@string/layanan_utama"
                            android:textSize="@dimen/title"
                            android:fontFamily="@font/raleway_medium"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/white"
                            android:text="Silahkan pilih layanan yang anda butuhkan"
                            android:textSize="@dimen/regularText"
                            android:fontFamily="@font/raleway_medium"/>

                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="3"
                    android:orientation="horizontal"
                    android:padding="10dp">
                    <LinearLayout
                        android:id="@+id/llPSB"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginVertical="5dp"
                        android:layout_marginHorizontal="10dp"
                        android:orientation="vertical"
                        android:background="@drawable/rc_bgwhite"
                        android:elevation="5dp">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="55dp"
                            android:padding="8dp"
                            android:layout_gravity="center_horizontal"
                            android:src="@drawable/ic_psb"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:paddingVertical="10dp"
                            android:text="PSB"
                            android:gravity="center_horizontal"
                            android:textSize="@dimen/smallText"
                            android:textColor="@color/white"
                            android:background="@drawable/rcbottom_bgprimary"/>
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/llGantiPaket"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginVertical="5dp"
                        android:layout_marginHorizontal="10dp"
                        android:orientation="vertical"
                        android:background="@drawable/rc_bgwhite"
                        android:elevation="5dp">
                        <ImageView
                            android:layout_width="55dp"
                            android:layout_height="55dp"
                            android:padding="8dp"
                            android:layout_gravity="center_horizontal"
                            android:src="@drawable/ic_gantipaket"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:paddingVertical="10dp"
                            android:text="Upgrade"
                            android:gravity="center_horizontal"
                            android:textSize="@dimen/smallText"
                            android:textColor="@color/white"
                            android:background="@drawable/rcbottom_bgprimary"/>
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/llPickupTicket"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginVertical="5dp"
                        android:layout_marginHorizontal="10dp"
                        android:orientation="vertical"
                        android:background="@drawable/rc_bgwhite"
                        android:elevation="5dp">
                        <ImageView
                            android:layout_width="55dp"
                            android:layout_height="55dp"
                            android:padding="8dp"
                            android:layout_gravity="center_horizontal"
                            android:src="@drawable/ic_pickupticket"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:paddingVertical="10dp"
                            android:text="GGN"
                            android:gravity="center_horizontal"
                            android:textSize="@dimen/smallText"
                            android:textColor="@color/white"
                            android:background="@drawable/rcbottom_bgprimary"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/horizontalBoundary"
                android:layout_marginTop="15dp"
                android:text="@string/layanan_lain"
                android:fontFamily="@font/raleway_semibold"
                android:textColor="@color/darkText"
                android:textSize="@dimen/regularText"
                android:layout_alignParentStart="true"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/horizontalBoundary"
                android:layout_marginTop="15dp"
                android:weightSum="4"
                android:orientation="horizontal">
                <LinearLayout
                    android:id="@+id/llTitipPaket"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingHorizontal="5dp"
                    android:orientation="vertical">
                    <ImageView
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:padding="20dp"
                        android:src="@drawable/ic_titippaket"
                        android:background="@drawable/circle_bgprimary"
                        android:layout_gravity="center_horizontal"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="@string/titip_paket"
                        android:gravity="center_horizontal"
                        android:textSize="@dimen/smallText"
                        android:textColor="@color/colorRegularText"/>

                </LinearLayout>
                <LinearLayout
                    android:id="@+id/llTitipBelanja"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingHorizontal="5dp"
                    android:orientation="vertical">
                    <ImageView
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:padding="20dp"
                        android:src="@drawable/ic_titipbelanja"
                        android:background="@drawable/circle_bgprimary"
                        android:layout_gravity="center_horizontal"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="Belanja"
                        android:gravity="center_horizontal"
                        android:textSize="@dimen/smallText"
                        android:textColor="@color/colorRegularText"/>

                </LinearLayout>
                <LinearLayout
                    android:id="@+id/llSOPP"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingHorizontal="5dp"
                    android:orientation="vertical">
                    <ImageView
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:padding="20dp"
                        android:src="@drawable/ic_sopp"
                        android:background="@drawable/circle_bgprimary"
                        android:layout_gravity="center_horizontal"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="@string/sopp"
                        android:gravity="center_horizontal"
                        android:textSize="@dimen/smallText"
                        android:textColor="@color/colorRegularText"/>

                </LinearLayout>
                <LinearLayout
                    android:id="@+id/llLayananBebas"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingHorizontal="5dp"
                    android:orientation="vertical">
                    <ImageView
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:padding="20dp"
                        android:src="@drawable/ic_layananbebas"
                        android:background="@drawable/circle_bgprimary"
                        android:layout_gravity="center_horizontal"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="@string/layanan_bebas"
                        android:gravity="center_horizontal"
                        android:textSize="@dimen/smallText"
                        android:textColor="@color/colorRegularText"/>

                </LinearLayout>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="15dp"
                android:layout_marginHorizontal="@dimen/horizontalBoundary"
                android:background="@color/colorLine"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/horizontalBoundary"
                android:layout_marginTop="15dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/kabar_cluster"
                    android:fontFamily="@font/raleway_semibold"
                    android:textColor="@color/darkText"
                    android:textSize="@dimen/regularText"
                    android:layout_alignParentStart="true"/>

                <TextView
                    android:id="@+id/tvKabarClusterLainnya"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/lainnya"
                    android:fontFamily="@font/raleway_semibold"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/regularText"
                    android:layout_alignParentEnd="true"/>
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="#fff"
                android:layout_marginHorizontal="@dimen/horizontalBoundary"
                android:layout_marginTop="10dp">

                <ProgressBar
                    android:id="@+id/progressBar"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="40dp"
                    android:background="#fff"/>


                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvKabarCluster"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:listitem="@layout/row_kabarcluster"
                    tools:itemCount="3"/>

            </LinearLayout>
            <LinearLayout
                android:id="@+id/llAgent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:padding="10dp"
                android:layout_marginHorizontal="@dimen/horizontalBoundary"
                android:layout_marginVertical="10dp"
                android:elevation="@dimen/regularElevation"
                android:background="@drawable/agent_bg"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/user_agent"
                    android:layout_alignParentStart="true"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text="Agen di cluster anda"
                    android:fontFamily="@font/raleway_semibold"
                    android:textSize="@dimen/semiBigText"
                    android:textColor="@color/white"
                    android:layout_gravity="center_vertical"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/raleway_medium"
                    android:text="Lihat lengkap"
                    android:textColor="@color/white"
                    android:textSize="@dimen/smallText"
                    android:layout_gravity="center_vertical|end"
                    android:gravity="end"/>
            </LinearLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>