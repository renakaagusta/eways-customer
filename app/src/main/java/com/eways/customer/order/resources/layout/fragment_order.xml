<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:focusableInTouchMode="true">
            <TextView
                android:id="@+id/tvActionbarTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/raleway_medium"
                android:textSize="@dimen/actionbar"
                android:text="@string/pesanan"
                android:gravity="center"
                android:padding="15dp"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/cardview_shadow_start_color"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="2"
                android:orientation="horizontal"
                android:background="@color/white">
                <TextView
                    android:id="@+id/tvOnProgress"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingVertical="16dp"
                    android:text="Dilayani"
                    android:textSize="@dimen/regularText"
                    android:textColor="@color/colorRegularText"
                    android:fontFamily="@font/raleway_semibold"
                    android:gravity="center"/>
                <TextView
                    android:id="@+id/tvOnCreate"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingVertical="16dp"
                    android:text="Menunggu"
                    android:textSize="@dimen/regularText"
                    android:textColor="@color/colorRegularText"
                    android:fontFamily="@font/raleway_semibold"
                    android:gravity="center"/>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/cardview_shadow_start_color"/>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvOrderOnCreate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/topBoundary"
                android:paddingHorizontal="@dimen/horizontalBoundary"
                android:paddingBottom="12dp"
                android:visibility="gone"
                android:clipToPadding="false"/>
            <TextView
                android:id="@+id/tvOrderOnCreateNoData"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="@dimen/horizontalBoundary"
                android:gravity="center"
                android:text="@string/no_oncreate"
                android:fontFamily="@font/raleway_medium"
                android:textSize="@dimen/regularText"
                android:textColor="@color/colorRegularText"
                android:visibility="gone"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvOrderOnProgress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/topBoundary"
                android:paddingHorizontal="@dimen/horizontalBoundary"
                android:paddingBottom="12dp"
                android:visibility="gone"
                android:clipToPadding="false"/>

            <TextView
                android:id="@+id/tvOrderOnProgressNoData"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="@dimen/horizontalBoundary"
                android:gravity="center"
                android:text="@string/no_onprogress"
                android:fontFamily="@font/raleway_medium"
                android:textSize="@dimen/regularText"
                android:textColor="@color/colorRegularText"
                android:visibility="gone"/>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>