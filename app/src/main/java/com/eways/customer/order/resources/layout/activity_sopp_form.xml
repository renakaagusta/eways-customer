<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:focusable="true"
            android:focusableInTouchMode="true">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginHorizontal="@dimen/horizontalBoundary"
                android:paddingVertical="10dp"
                android:orientation="vertical"
                android:background="@drawable/rc_bgwhite"
                android:elevation="5dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingHorizontal="10dp">
                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="40dp"
                        android:src="@drawable/ic_sopp"
                        android:tint="@color/colorPrimary"
                        android:layout_marginEnd="8dp"
                        android:layout_gravity="center_vertical"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_gravity="center_vertical">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/sopp"
                            android:textColor="@color/colorRegularText"
                            android:textSize="@dimen/semiBigText"
                            android:fontFamily="@font/raleway_semibold"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/colorRegularText"
                            android:text="Anda dapat menitipkan pembayaran anda pada agen"
                            android:fontFamily="@font/raleway_medium"
                            android:textSize="@dimen/smallText"/>
                    </LinearLayout>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginVertical="15dp"
                    android:background="@color/colorLine"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="10dp"
                    android:textSize="@dimen/regularText"
                    android:text="Pilih Tagihan"
                    android:textColor="@color/colorRegularText"
                    android:fontFamily="@font/raleway_semibold"/>
                <RelativeLayout
                    android:id="@+id/rlSOPPOption"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="10dp"
                    android:layout_marginHorizontal="10dp"
                    android:background="@drawable/bg_ordertext"
                    android:padding="10dp">
                    <TextView
                        android:id="@+id/tvSOPPOption"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorHint"
                        android:text="@string/sopp_hint"
                        android:textSize="@dimen/regularText"
                        android:fontFamily="@font/raleway_medium"
                        android:layout_centerVertical="true"
                        android:layout_alignParentStart="true"
                        android:layout_toStartOf="@+id/ivServicePacketOption"/>
                    <ImageView
                        android:id="@+id/ivSOPPOption"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:src="@drawable/ic_expand_more_black_24dp"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"/>
                </RelativeLayout>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="10dp"
                    android:textSize="@dimen/regularText"
                    android:text="Data Diri"
                    android:textColor="@color/colorRegularText"
                    android:fontFamily="@font/raleway_semibold"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="5dp"
                    android:layout_marginHorizontal="10dp"
                    android:padding="13dp"
                    android:orientation="horizontal"
                    android:background="@drawable/bg_ordertext">
                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginEnd="8dp"
                        android:src="@drawable/ic_user"
                        android:layout_gravity="center_vertical"/>
                    <EditText
                        android:id="@+id/etCustomerName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:hint="Nama"
                        android:textColor="@color/darkText"
                        android:textSize="@dimen/regularText"
                        android:fontFamily="@font/raleway_medium"
                        android:background="@null"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="10dp"
                    android:layout_marginHorizontal="10dp"
                    android:padding="13dp"
                    android:orientation="horizontal"
                    android:background="@drawable/bg_ordertext">
                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginEnd="8dp"
                        android:src="@drawable/ic_phone"
                        android:layout_gravity="center_vertical"/>
                    <EditText
                        android:id="@+id/etCustomerPhone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:hint="Nomor Telepon"
                        android:inputType="number"
                        android:textColor="@color/darkText"
                        android:textSize="@dimen/regularText"
                        android:fontFamily="@font/raleway_medium"
                        android:background="@null"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="5dp"
                    android:layout_marginHorizontal="10dp"
                    android:padding="13dp"
                    android:orientation="horizontal"
                    android:background="@drawable/bg_ordertext">
                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginEnd="8dp"
                        android:src="@drawable/ic_home"
                        android:tint="@color/lightGrey"
                        android:layout_gravity="center_vertical"/>
                    <EditText
                        android:id="@+id/etCustomerAddress"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:hint="Alamat"
                        android:textColor="@color/darkText"
                        android:textSize="@dimen/regularText"
                        android:fontFamily="@font/raleway_medium"
                        android:background="@null"/>
                </LinearLayout>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginHorizontal="10dp"
                    android:textSize="@dimen/regularText"
                    android:text="Informasi Tambahan"
                    android:textColor="@color/colorRegularText"
                    android:fontFamily="@font/raleway_semibold"/>
                <EditText
                    android:id="@+id/etAdditionalInfo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:lines="5"
                    android:hint="Data lain yang diperlukan untuk pembayaran"
                    android:gravity="top|left"
                    android:layout_marginHorizontal="10dp"
                    android:layout_marginVertical="10dp"
                    android:textColor="@color/darkText"
                    android:background="@drawable/bg_ordertext"
                    android:padding="13dp"
                    android:textSize="@dimen/regularText"
                    android:fontFamily="@font/raleway_medium"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="10dp"
                    android:textSize="@dimen/regularText"
                    android:text="@string/agen"
                    android:textColor="@color/colorRegularText"
                    android:fontFamily="@font/raleway_semibold"/>
                <RelativeLayout
                    android:id="@+id/rlAgentOption"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="10dp"
                    android:layout_marginHorizontal="10dp"
                    android:background="@drawable/bg_ordertext"
                    android:padding="10dp">
                    <TextView
                        android:id="@+id/tvAgentOption"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorHint"
                        android:text="@string/agent_hint"
                        android:textSize="@dimen/regularText"
                        android:fontFamily="@font/raleway_medium"
                        android:layout_centerVertical="true"
                        android:layout_alignParentStart="true"
                        android:layout_toStartOf="@+id/ivAgentOption"/>
                    <ImageView
                        android:id="@+id/ivAgentOption"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:src="@drawable/ic_expand_more_black_24dp"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"/>
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentBottom="true"
                android:orientation="vertical"
                android:gravity="bottom">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="16dp"
                    android:background="@color/colorLine"/>
                <TextView
                    android:id="@+id/tvSubmit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/horizontalBoundary"
                    android:background="@drawable/rc_bgprimary"
                    android:layout_marginVertical="16dp"
                    android:elevation="5dp"
                    android:fontFamily="@font/raleway_medium"
                    android:padding="12dp"
                    android:text="Pesan"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="@dimen/regularText" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>