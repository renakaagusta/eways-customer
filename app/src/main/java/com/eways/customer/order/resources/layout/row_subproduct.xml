<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@drawable/rc_bgwhite"
    android:padding="10dp"
    android:elevation="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="100dp"
        android:orientation="horizontal"
        android:layout_alignParentStart="true">
        <ImageView
            android:id="@+id/ivSubproduct"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_product"
            android:layout_gravity="center_vertical"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="8dp">
            <TextView
                android:id="@+id/tvSubproductName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/raleway_medium"
                android:textColor="@color/colorRegularText"
                android:textSize="@dimen/semiBigText"
                android:text="Nama Barang"
                android:lines="2"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginVertical="10dp"
                android:background="@color/colorLine"/>
            <TextView
                android:id="@+id/tvSubproductPrice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/raleway_medium"
                android:textColor="@color/colorRegularText"
                android:textSize="@dimen/smallText"
                android:text="Harga Barang"/>
        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true">
        <TextView
            android:id="@+id/tvAdd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingHorizontal="10dp"
            android:paddingVertical="5dp"
            android:text="Tambah"
            android:textSize="@dimen/smallText"
            android:textColor="@color/white"
            android:background="@drawable/rc_bgprimary"
            android:layout_gravity="center_horizontal"/>
        <LinearLayout
            android:id="@+id/llAmount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/bMinus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingVertical="5dp"
                android:text="-"
                android:textSize="@dimen/smallText"
                android:background="@color/colorPrimary"
                android:paddingHorizontal="10dp"
                android:textColor="@color/white"/>
            <TextView
                android:id="@+id/tvSubproductAmount"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:paddingVertical="5dp"
                android:gravity="center_horizontal"
                android:background="@drawable/rc_bgwhite"
                android:text="1000"/>
            <TextView
                android:id="@+id/bAdd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingVertical="5dp"
                android:text="+"
                android:textSize="@dimen/smallText"
                android:background="@color/colorPrimary"
                android:paddingHorizontal="10dp"
                android:textColor="@color/white"/>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>