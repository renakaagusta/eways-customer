<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingHorizontal="@dimen/horizontalBoundary"
            android:orientation="vertical"
            android:clipToPadding="false">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/topBoundary"
                android:layout_marginStart="5dp"
                android:textSize="@dimen/regularText"
                android:text="Pengirim"
                android:textColor="@color/colorRegularText"
                android:fontFamily="@font/raleway_semibold"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:orientation="vertical"
                android:background="@drawable/rc_bgwhite"
                android:elevation="@dimen/regularElevation">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="10dp"
                    android:layout_marginTop="10dp"
                    android:text="Nama Pengirim"
                    android:textSize="@dimen/regularText"
                    android:textColor="@color/colorLightText"/>
                <TextView
                    android:id="@+id/tvSenderName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:text="Bambang"
                    android:fontFamily="@font/raleway_semibold"
                    android:textColor="@color/colorRegularText"
                    android:textSize="@dimen/regularText"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/lightGrey"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="10dp"
                    android:layout_marginTop="10dp"
                    android:text="Alamat Pengirim"
                    android:textSize="@dimen/regularText"
                    android:textColor="@color/colorLightText"/>
                <TextView
                    android:id="@+id/tvSenderAddress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:text="Jl. Sesama"
                    android:fontFamily="@font/raleway_semibold"
                    android:textColor="@color/colorRegularText"
                    android:textSize="@dimen/regularText"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/lightGrey"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="10dp"
                    android:layout_marginTop="10dp"
                    android:text="Nomor Telepon Pengirim"
                    android:textSize="@dimen/regularText"
                    android:textColor="@color/colorLightText"/>
                <TextView
                    android:id="@+id/tvSenderPhone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:text="089213"
                    android:fontFamily="@font/raleway_semibold"
                    android:textColor="@color/colorRegularText"
                    android:textSize="@dimen/regularText"/>
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/topBoundary"
                android:layout_marginStart="5dp"
                android:textSize="@dimen/regularText"
                android:text="Penerima"
                android:textColor="@color/colorRegularText"
                android:fontFamily="@font/raleway_semibold"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:orientation="vertical"
                android:background="@drawable/rc_bgwhite"
                android:elevation="@dimen/regularElevation">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="10dp"
                    android:layout_marginTop="10dp"
                    android:text="Nama Penerima"
                    android:textSize="@dimen/regularText"
                    android:textColor="@color/colorLightText"/>
                <TextView
                    android:id="@+id/tvReceiverName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:text="Bambang"
                    android:fontFamily="@font/raleway_semibold"
                    android:textColor="@color/colorRegularText"
                    android:textSize="@dimen/regularText"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/lightGrey"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="10dp"
                    android:layout_marginTop="10dp"
                    android:text="Alamat Penerima"
                    android:textSize="@dimen/regularText"
                    android:textColor="@color/colorLightText"/>
                <TextView
                    android:id="@+id/tvReceiverAddress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:text="Jl. Sesama"
                    android:fontFamily="@font/raleway_semibold"
                    android:textColor="@color/colorRegularText"
                    android:textSize="@dimen/regularText"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/lightGrey"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="10dp"
                    android:layout_marginTop="10dp"
                    android:text="Nomor Telepon Penerima"
                    android:textSize="@dimen/regularText"
                    android:textColor="@color/colorLightText"/>
                <TextView
                    android:id="@+id/tvReceiverPhone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:text="089213"
                    android:fontFamily="@font/raleway_semibold"
                    android:textColor="@color/colorRegularText"
                    android:textSize="@dimen/regularText"/>
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/topBoundary"
                android:layout_marginStart="5dp"
                android:textSize="@dimen/regularText"
                android:text="Detail Paket"
                android:textColor="@color/colorRegularText"
                android:fontFamily="@font/raleway_semibold"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:orientation="vertical"
                android:background="@drawable/rc_bgwhite"
                android:elevation="@dimen/regularElevation">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="10dp"
                    android:layout_marginTop="10dp"
                    android:text="Nama Barang"
                    android:textSize="@dimen/regularText"
                    android:textColor="@color/colorLightText"/>
                <TextView
                    android:id="@+id/tvItemName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:text="Bambang"
                    android:fontFamily="@font/raleway_semibold"
                    android:textColor="@color/colorRegularText"
                    android:textSize="@dimen/regularText"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/lightGrey"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="10dp"
                    android:layout_marginTop="10dp"
                    android:text="Deskripsi Pengirim"
                    android:textSize="@dimen/regularText"
                    android:textColor="@color/colorLightText"/>
                <TextView
                    android:id="@+id/tvItemDescription"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:text="Jl. Sesama"
                    android:fontFamily="@font/raleway_semibold"
                    android:textColor="@color/colorRegularText"
                    android:textSize="@dimen/regularText"/>

            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/topBoundary"
                android:textSize="@dimen/regularText"
                android:text="@string/agen"
                android:textColor="@color/colorRegularText"
                android:fontFamily="@font/raleway_semibold"/>

            <TextView
                android:id="@+id/tvAgentName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:padding="15dp"
                android:background="@drawable/rc_bgwhite"
                android:elevation="5dp"
                android:textColor="@color/colorRegularText"
                android:fontFamily="@font/raleway_medium"
                android:textSize="@dimen/regularText"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentBottom="true"
                android:orientation="vertical"
                android:gravity="bottom">
                <TextView
                    android:id="@+id/tvSubmit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rc_bgprimary"
                    android:layout_marginVertical="16dp"
                    android:elevation="5dp"
                    android:fontFamily="@font/raleway_medium"
                    android:padding="12dp"
                    android:text="Konfirmasi"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="@dimen/regularText" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>