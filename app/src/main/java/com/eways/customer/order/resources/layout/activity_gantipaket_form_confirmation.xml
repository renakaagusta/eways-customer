<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingHorizontal="@dimen/horizontalBoundary"
            android:orientation="vertical"
            android:clipToPadding="false">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/topBoundary"
                android:textSize="@dimen/regularText"
                android:text="Paket Layanan Anda Saat Ini"
                android:textColor="@color/colorRegularText"
                android:fontFamily="@font/raleway_semibold"/>
            <TextView
                android:id="@+id/tvCurrentServicePacketName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:padding="15dp"
                android:background="@drawable/rc_bgwhite"
                android:elevation="5dp"
                android:textColor="@color/colorRegularText"
                android:fontFamily="@font/raleway_medium"
                android:textSize="@dimen/regularText"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/topBoundary"
                android:textSize="@dimen/regularText"
                android:text="@string/deskripsi_layanan"
                android:textColor="@color/colorRegularText"
                android:fontFamily="@font/raleway_semibold"/>

            <TextView
                android:id="@+id/tvCurrentServicePacketDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:padding="15dp"
                android:background="@drawable/rc_bgwhite"
                android:elevation="5dp"
                android:textColor="@color/colorRegularText"
                android:fontFamily="@font/raleway_medium"
                android:textSize="@dimen/regularText"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/topBoundary"
                android:textSize="@dimen/regularText"
                android:text="Paket Layanan Baru yang Anda Inginkan"
                android:textColor="@color/colorRegularText"
                android:fontFamily="@font/raleway_semibold"/>
            <TextView
                android:id="@+id/tvServicePacketName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:padding="15dp"
                android:background="@drawable/rc_bgwhite"
                android:elevation="5dp"
                android:textColor="@color/colorRegularText"
                android:fontFamily="@font/raleway_medium"
                android:textSize="@dimen/regularText"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/topBoundary"
                android:textSize="@dimen/regularText"
                android:text="@string/deskripsi_layanan"
                android:textColor="@color/colorRegularText"
                android:fontFamily="@font/raleway_semibold"/>

            <TextView
                android:id="@+id/tvServicePacketDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:padding="15dp"
                android:background="@drawable/rc_bgwhite"
                android:elevation="5dp"
                android:textColor="@color/colorRegularText"
                android:fontFamily="@font/raleway_medium"
                android:textSize="@dimen/regularText"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/topBoundary"
                android:textSize="@dimen/regularText"
                android:text="@string/agen"
                android:textColor="@color/colorRegularText"
                android:fontFamily="@font/raleway_semibold"/>

            <TextView
                android:id="@+id/tvAgentName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:padding="15dp"
                android:background="@drawable/rc_bgwhite"
                android:elevation="5dp"
                android:textColor="@color/colorRegularText"
                android:fontFamily="@font/raleway_medium"
                android:textSize="@dimen/regularText"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/topBoundary"
                android:textSize="@dimen/regularText"
                android:text="Fee Agen"
                android:textColor="@color/colorRegularText"
                android:fontFamily="@font/raleway_semibold"/>
            <TextView
                android:id="@+id/tvAgentFee"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:padding="15dp"
                android:background="@drawable/rc_bgwhite"
                android:elevation="5dp"
                android:textColor="@color/colorRegularText"
                android:fontFamily="@font/raleway_medium"
                android:textSize="@dimen/regularText"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentBottom="true"
                android:orientation="vertical"
                android:gravity="bottom">
                <TextView
                    android:id="@+id/tvSubmit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rc_bgprimary"
                    android:layout_marginVertical="16dp"
                    android:elevation="5dp"
                    android:fontFamily="@font/raleway_medium"
                    android:padding="12dp"
                    android:text="Konfirmasi"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="@dimen/regularText" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>