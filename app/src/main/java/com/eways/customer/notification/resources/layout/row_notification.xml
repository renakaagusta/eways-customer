<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/rc_bgwhite"
    android:padding="10dp"
    android:elevation="5dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="3"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tvNotificationType"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:textColor="@color/darkText"
            android:textSize="@dimen/regularText"
            android:fontFamily="@font/raleway_semibold"
            android:text="Pesanan sedang dilayani"/>
        <TextView
            android:id="@+id/tvDate"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/colorRegularText"
            android:textSize="@dimen/regularText"
            android:fontFamily="@font/raleway_medium"
            android:text="12 Januari 2018"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="3"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tvOrderType"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:textColor="@color/colorRegularText"
            android:textSize="@dimen/regularText"
            android:fontFamily="@font/raleway_medium"
            android:text="SOPP"/>
        <TextView
            android:id="@+id/tvBilling"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/colorRegularText"
            android:textSize="@dimen/regularText"
            android:fontFamily="@font/raleway_medium"
            android:text="Rp 900.000"
            android:visibility="gone"/>
    </LinearLayout>

</LinearLayout>